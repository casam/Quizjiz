<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/black"
        >
        <TextView
            style="@style/TitleTextStyle"
            android:text="Biology Quiz"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="serif"
            />



        <!--Question Title 1-->
        <TextView
            android:id="@+id/question1"
            style="@style/TitleTextStyle"
            android:text="1) Who is known as father of Zoology"
            />

        <!--Question 1 Results-->
        <RadioGroup
            android:id="@+id/resultGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!--Four Result CheckBox-->
            <RadioButton
                android:id="@+id/bresult1_1"
                style="@style/RadioStyle"
                android:buttonTint="@color/yellow"

                android:text="Darwin" />

            <RadioButton
                android:id="@+id/bresult1_2"
                style="@style/RadioStyle"
                android:buttonTint="@color/yellow"

                android:text="Aristotle" />

            <RadioButton
                android:id="@+id/bresult1_3"
                style="@style/RadioStyle"
                android:buttonTint="@color/yellow"

                android:text="Theophrastus" />

            <RadioButton
                android:id="@+id/bresult1_4"
                style="@style/RadioStyle"
                android:buttonTint="@color/yellow"

                android:text=" Lamark" />
        </RadioGroup>

        <!--Question Title 2-->
        <TextView
            android:id="@+id/question2"
            style="@style/TitleTextStyle"
            android:text="2) The human heart is ?"
            />

        <!--Question 2 Result-->
        <RadioGroup
            android:id="@+id/resultGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <!--Four Result CheckBox-->
            <RadioButton
                android:id="@+id/bresult2_1"
                style="@style/RadioStyle"
                android:text="Neurogenic heart"

                android:buttonTint="@color/yellow"
                />
            <RadioButton
                android:id="@+id/bresult2_2"
                style="@style/RadioStyle"
                android:text="Myogenic heart"

                android:buttonTint="@color/yellow"
                />
            <RadioButton
                android:id="@+id/bresult2_3"
                style="@style/RadioStyle"
                android:text="Pulsating heart"

                android:buttonTint="@color/yellow"
                />
            <RadioButton
                android:id="@+id/bresult2_4"
                style="@style/RadioStyle"
                android:text="Ampullary heart"

                android:buttonTint="@color/yellow"
                />
        </RadioGroup>


        <TextView
            android:id="@+id/question3"
            style="@style/TitleTextStyle"
            android:text="3) Spermology is the study of?"
            />

        <!--Question 3 Result-->
        <RadioGroup
            android:id="@+id/resultGroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <!--Four Result CheckBox-->
            <RadioButton
                android:id="@+id/bresult3_1"
                style="@style/RadioStyle"
                android:text="Seed"

                android:buttonTint="@color/yellow"
                />
            <RadioButton
                android:id="@+id/bresult3_2"
                style="@style/RadioStyle"
                android:text=" Leaf"

                android:buttonTint="@color/yellow"
                />
            <RadioButton
                android:id="@+id/bresult3_3"
                style="@style/RadioStyle"
                android:text="Fruit"

                android:buttonTint="@color/yellow"
                />
            <RadioButton
                android:id="@+id/bresult3_4"
                style="@style/RadioStyle"
                android:text="Pollen grain"

                android:buttonTint="@color/yellow"
                />
        </RadioGroup>

        <TextView
            android:id="@+id/question4"
            style="@style/TitleTextStyle"
            android:text="4) Chambered heart occurs in?"
            />

        <!--Question 3 Result-->
        <RadioGroup
            android:id="@+id/resultGroup4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <!--Four Result CheckBox-->
            <RadioButton
                android:id="@+id/bresult4_1"
                style="@style/RadioStyle"
                android:text="Leech"

                android:buttonTint="@color/yellow"
                />
            <RadioButton
                android:id="@+id/bresult4_2"
                style="@style/RadioStyle"
                android:text="Earthworm"

                android:buttonTint="@color/yellow"
                />
            <RadioButton
                android:id="@+id/bresult4_3"
                style="@style/RadioStyle"
                android:text="Snail"

                android:buttonTint="@color/yellow"
                />
            <RadioButton
                android:id="@+id/bresult4_4"
                style="@style/RadioStyle"
                android:text="Cockroach"

                android:buttonTint="@color/yellow"
                />
        </RadioGroup>

        <Button
            android:id="@+id/submit_button"
            android:text="Sumbit"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sumbitButton"
            android:background="#ff4f51"
            android:layout_margin="5dp"
            android:textColor="#dbdbdb"
            />
    </LinearLayout>


</ScrollView>